{% extends 'base.html.twig' %}

{% block title %}Season
{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table table-light">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex flex-column">
        <a href="{{ path('season_index') }}">back to list</a>

        <a class="btn btn-secondary" href="{{ path('season_edit', {'id': season.id}) }}">Edit</a>

        {{ include('season/_delete_form.html.twig') }}
    </div>
{% endblock %}
