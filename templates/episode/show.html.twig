{% extends 'base.html.twig' %}

{% block title %}Episode
{% endblock %}

{% block body %}
    <h1>Episode</h1>

    <table class="table table-light">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex flex-column">
        <a href="{{ path('episode_index') }}">back to list</a>

        <a class="btn btn-secondary" href="{{ path('episode_edit', {'id': episode.id}) }}">Edit</a>

        {{ include('episode/_delete_form.html.twig') }}
    </div>
{% endblock %}
