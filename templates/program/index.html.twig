{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
    <h1 class="mb-5">Toutes les séries de la table program :
    </h1>

    <div class="col-1">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary btn-sm mt-2 mb-5">Search</button>
        {{ form_end(form) }}
    </div>

    {% for program in programs %}
        <div class="mb-5">
            <h2>{{ loop.index }}
                /
                {{ program.title }}
                - Catégorie :
                <a href="{{ path("category_show", { categoryName: program.category.name }) }}">{{ program.category.name }}</a>
            </h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
